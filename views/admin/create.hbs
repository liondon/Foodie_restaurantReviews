<p></p>

{{#if restaurant}}
<h4 class="text-center">Edit Restaurant</h4>
<form class="mt-5" action="/admin/restaurants/{{restaurant.id}}?_method=PUT" method="POST"
  enctype="multipart/form-data">
  {{else}}
  <h4 class="text-center">Add Restaurant</h4>
  <form class="mt-5" action="/admin/restaurants" method="POST" enctype="multipart/form-data">
    {{/if}}

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required autofocus
        value={{restaurant.name}}>
    </div>

    <div class="form-group">
      <label for="tel">Tel</label>
      <input type="text" class="form-control" id="tel" name="tel" placeholder="Enter tel" autofocus
        value={{restaurant.tel}}>
    </div>

    <div class="form-group">
      <label for="addr">Address</label>
      <input type="text" class="form-control" id="addr" name="addr" placeholder="Enter address" autofocus
        value={{restaurant.addr}}>
    </div>

    <div class="form-group">
      <label for="open_hours">Open Hours</label>
      <input type="time" class="form-control" id="open_hours" name="open_hours" autofocus placeholder="Enter open hours"
        value={{restaurant.open_hours}}>
    </div>

    <div class="form-group">
      <label for="desc">Description</label>
      <textarea class="form-control" id="desc" name="desc" rows="3">{{restaurant.desc}}</textarea>
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      <input type="file" class="form-control-file" id="image" name="image">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>