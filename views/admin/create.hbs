<p></p>
{{#if restaurant}}
<h4 class="text-center">Edit Restaurant</h4>
<form class="mt-5" action="/admin/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
  {{else}}
  <h4 class="text-center">Add Restaurant</h4>
  <form class="mt-5" action="/admin/restaurants" method="POST">
    {{/if}}
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value={{restaurant.name}}
        required autofocus>
    </div>

    <div class="form-group">
      <label for="tel">Tel</label>
      <input type="text" class="form-control" id="tel" name="tel" placeholder="Enter tel" value={{restaurant.name}}
        autofocus>
    </div>

    <div class="form-group">
      <label for="addr">Address</label>
      <input type="text" class="form-control" id="addr" name="addr" placeholder="Enter address"
        value={{restaurant.addr}} autofocus>
    </div>

    <div class="form-group">
      <label for="open_hours">Open Hours</label>
      <input type="time" class="form-control" id="open_hours" name="open_hours" placeholder="Enter open hours"
        value={{restaurant.open_hours}} autofocus>
    </div>

    <div class="form-group">
      <label for="desc">Description</label>
      <textarea class="form-control" id="desc" name="desc" rows="3">{{restaurant.desc}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>