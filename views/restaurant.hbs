<div class="row">
  <div class="col-md-12">
    <h1>{{restaurant.name}}</h1>
    <p>{{restaurant.Category.name}}</p>
  </div>

  <div class="col-md-4">
    <div class="well">
      <img class="img-responsive center-block" src="{{restaurant.image}}" style="width: 250px;margin-bottom: 25px;">
      <ul class="list-unstyled">
        <li><strong>Tel:<a /strong> {{restaurant.tel}}</li>
        <li><strong>Address:</strong> {{restaurant.addr}}</li>
        <li><strong>Open Hour:</strong> {{restaurant.open_hours}}</li>
      </ul>
    </div>
  </div>
  <div class="col-md-8">
    <p>{{restaurant.desc}}</p>
  </div>
</div>

<br /><br />
<h3>Comments</h3>
{{#each restaurant.Comments}}
{{#if ../user.isAdmin}}
<form action="/comments/{{this.id}}?_method=DELETE" method="POST" style="float: right;">
  <button type="submit" class="btn btn-danger">Delete</button>
</form>
{{/if}}
<blockquote class="blockquote mb-0">
  <h4><a href="/users/{{this.User.id}}">{{this.User.name}}</a></h4>
  <p>{{this.content}}</p>
  <footer class="blockquote-footer">{{momentFromNow this.createdAt}}</footer>
</blockquote>
<hr />
{{/each}}

<form action="/comments" method="POST">
  <div class="form-group">
    <label for="content">Leave your comment:</label>
    <textarea class="form-control" id="content" name="content" rows="3"></textarea>
  </div>
  <input type="hidden" name="restaurantId" value="{{restaurant.id}}" />
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br />

