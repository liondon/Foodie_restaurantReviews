<h1>What's new</h1>
<hr />
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        New Restaurants
      </div>
      <div class="card-body">
        {{#each restaurants}}
        <div>
          <h4>
            <a href="/restaurants/{{this.id}}">{{this.name}}</a>
            <small>{{this.Category.name}}</small>
          </h4>
          <p>{{this.desc}}</p>
          {{momentFromNow this.createdAt}}
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        New Comments
      </div>
      <div class="card-body">
        {{#each comments}}
        <div>
          <h4>
            <a href="/restaurants/{{this.Restaurant.id}}">{{this.Restaurant.name}}</a>
          </h4>
          <p class="mt-3 mb-0">{{this.content}}</p>
          ── by <a href="/users/{{this.User.id}}">{{this.User.name}}</a>
          at {{momentFromNow this.createdAt}}
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>